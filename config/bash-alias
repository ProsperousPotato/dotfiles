# Arch specific
alias orphans="pacman -Qqtd"
alias exterminateorphans="sudo pacman -Rns $(pacman -Qqtd)"
alias mkgrubcfg="sudo grub-mkconfig -o /boot/grub/grub.cfg"

alias doas="doas "
alias sudo="doas "
alias openrc="doas openrc"
alias 23="doas poweroff"
alias 42="doas reboot"

# General
alias sudo="sudo "
alias :wq!="doas poweroff"
alias :wq="exit"
alias :q="exit"
alias :Q="exit"
alias sxiv="nsxiv"
alias ff="fastfetch"
alias nf="neofetch"
alias ls="ls --color=auto --size --human-readable -1"
alias la="ls -A --color=auto --size --human-readable -1"
alias ld="du -shc $(pwd)"
alias grep="grep --color=auto"
alias ..="cd .."
alias mv="mv -iv"
alias cp="cp -ivr" 
alias rm="rm -iv"
alias mpv="mpv -hwdec=auto --fs"
alias nv="nvim"
alias v="vim"
alias myip="curl ipinfo.io/ip; echo """
alias move="mv -iv"
alias rename="mv -iv"
alias copy="cp -ivr"
alias delete="rm -iv"
alias remove="rm -iv"

# Directory aliases
alias .lb="cd ~/.local/bin"
alias .lg="cd ~/.local/games"
alias .lsh="cd ~/.local/share"
alias .ls="cd ~/.local/src"
alias .c="cd ~/.config"
